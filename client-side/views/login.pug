extends layout

block content
    div.login-header
        h1.login-title 明动周报
    form.login-form
        div.form-row
            input.login-input.clean-input(id="username" value=username placeholder="用户名")
            i.clean-icon.iconfont.icon-close

        div.form-row
            input.login-input(type="password" id="password" value=pa placeholder="密码")
            i.look-icon.iconfont.icon-eye-close
            i.clean-icon.iconfont.icon-close

        div.form-row
            input(type="checkbox" id="keepPassword" checked=pa ? true : false)

            label(for="keepPassword") 记住密码

        div.error-block#error-block 用户名错误

        div.form-row
            button.btn.login-btn(type="submit") 登录


block script
    script(src="javascripts/login.js")

